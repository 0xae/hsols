{% extends 'BackendBundle:Default:layout.html.twig' %}
{% block title %}GESTÃO DE OCORRÊNCIAS ARFA/PARAMETRIZAÇÃO{% endblock %}

{% block content -%}

<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Anexos</h3>
                <div class="box-tools">
                    <a href="{{path('administration_Document_new')}}" class="btn btn-primary">
                        <span class="glyphicon glyphicon-plus"></span>
                        Criar anexo
                    </a>
                </div>
            </div>
            <!-- /.box-header -->

            <div class="box-body table-responsive no-padding">
                <table class="table table-hover table-striped">
                    <thead>
                        <tr>                                        
                            <th>Código #</th>
                            <th>Nome</th>
                            <th>Descri&ccedil;&atilde;o</th>
                            <th>Data de cria&ccedil;&atilde;o</th>
                            <th>Criado por</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for entity in entities %}
                            <tr>
                                <td>
                                    <a href="{{ path('administration_Document_edit', { 'id': entity.id }) }}">
                                    #{{ entity.id }}
                                    </a>
                                </td>
                                <td>{{ entity.name }}</td>     
                                <td>{{ entity.description }}</td>
                                <td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>    
                                <td>{{ entity.createdBy.name }}/{{ entity.createdBy.entity.name }}</td>
                                <td>
                                    <a href="{{ path('administration_Document_edit', { 'id': entity.id }) }}">
                                        <span class="badge badge-primary">
                                                EDITAR
                                        </span>
                                    </a>
                                </td>                                
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
        {{ pagerfanta(fanta, 'twitter_bootstrap3', {
            'next_message': 'Proximo',
            'prev_message': 'Anterior',
            })
        }}
    </div>
</div>

{% endblock %}
