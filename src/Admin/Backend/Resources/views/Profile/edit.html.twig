{% extends 'BackendBundle:Default:layout.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Perfil {{entity.name}}</h3>
                    <p style="font-size:12px;color:gray">
                        <span class="fa fa-user"></span>
                        Criada por {{entity.createdBy.name}}/{{entity.createdBy.entity.name}}
                        <br/> <span class="fa fa-calendar"></span> em {{entity.createdAt|date('Y-m-d')}}
                    </p>
                    <p>
                        <a href="{{ path('backend_administration_main', {'tab': 'list_profile'}) }}">
                            <span class="glyphicon glyphicon-back"></span>Voltar
                        </a>
                    </p>
                </div>
                <!-- /.box-header -->

                <div class="box-body no-padding">
                    {{ include('BackendBundle:Profile:form.html.twig', {
                            'form' : edit_form, 
                            'edit': false
                        })
                    }}
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
    </div>
{% endblock %}

