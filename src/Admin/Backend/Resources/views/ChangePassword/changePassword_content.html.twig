{% extends 'BackendBundle:Default:layout.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-5">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">
                            <span class="fa fa-lock text-success"></span>
                            Mudar password</h3>
                    </div>
                    <!-- /.box-header -->

                    <div class="box-body">
                        <form action="{{ path('fos_user_change_password') }}" {{ form_enctype(form) }} 
                            method="POST" 
                            class="fos_user_change_password">
                            {% form_theme form 'bootstrap_3_layout.html.twig' %}

                            <div class="form-group">
                                <label>Password Actual</label>
                                {{ form_widget(form.current_password) }}
                                {{ form_errors(form.current_password) }}
                            </div>

                            {# <div class="form-group">
                                <label>Nova Password</label>
                                {{ form_widget(form.new) }}
                            </div>

                            <div class="form-group">
                                <label>Confirme</label>
                                {{ form_widget(form.new_password_confirmation) }}
                            </div> #}

                            {{ form_widget(form) }}

                            <button class="submit btn btn-success" type="submit">
                                Mudar password
                            </button>
                        </form>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
        </div>
    </div>
{% endblock %}


