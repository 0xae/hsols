{% extends 'BackendBundle:Default:layout.html.twig' %}

{% block content -%}

    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Listagem de Sugestão/Reclamação</h3>

                    <div class="box-tools">
                        <a class="btn btn-primary" 
                        href="{{ path('administration_sugestao_new') }}">
                            <span class="glyphicon glyphicon-plus"></span>
                            Criar Sugestao
                        </a>
                    </div>
                </div>
                <!-- /.box-header -->

                <div class="box-body table-responsive no-padding">
                    <table class="table table-hover table-striped">
                        <thead>
                            <tr>                                        <th>ID#</th>
                                    <th>Data</th><th>Nome</th><th>Morada</th><th>Email</th><th>Telefone</th><th>Descricao</th><th>Code</th>                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for entity in entities %}
                                <tr>                                                                                    <td>
                                                <a href="{{ path('administration_sugestao_show', { 'id': entity.id }) }}">
                                                #{{ entity.id }}
                                                </a>
                                            </td>                                                                                    <td>{% if entity.data %}{{ entity.data|date('Y-m-d H:i:s') }}{% endif %}</td>                                                                                    <td>{{ entity.nome }}</td>                                                                                    <td>{{ entity.morada }}</td>                                                                                    <td>{{ entity.email }}</td>                                                                                    <td>{{ entity.telefone }}</td>                                                                                    <td>{{ entity.descricao }}</td>                                                                                    <td>{{ entity.code }}</td>                                            <td><a href="{{ path('administration_sugestao_edit', { 'id': entity.id }) }}">
<span class="badge badge-primary">
        EDITAR
</span>
</a>
                                            </td>                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                                    </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
    </div>

{% endblock %}
