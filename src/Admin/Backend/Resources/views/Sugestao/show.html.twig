{% extends 'BackendBundle:Default:layout.html.twig' %}

{% block content %}

<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Sugestao #{{ entity.id }}</h3>
                <p>
                    <a href="{{ path('administration_sugestao') }}">
                        <span class="glyphicon glyphicon-back"></span> Voltar
                    </a>
                </p>
            </div>
            <!-- /.box-header -->

            <div class="box-body no-padding">
                <table class="table table-hover table-striped">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ entity.id }}</td>
                        </tr>
                        <tr>
                            <th>Data</th>
                            <td>{{ entity.data|date('Y-m-d H:i:s') }}</td>
                        </tr>
                        <tr>
                            <th>Nome</th>
                            <td>{{ entity.nome }}</td>
                        </tr>
                        <tr>
                            <th>Morada</th>
                            <td>{{ entity.morada }}</td>
                        </tr>
                        <tr>
                            <th>Email</th>
                            <td>{{ entity.email }}</td>
                        </tr>
                        <tr>
                            <th>Telefone</th>
                            <td>{{ entity.telefone }}</td>
                        </tr>
                        <tr>
                            <th>Descricao</th>
                            <td>{{ entity.descricao }}</td>
                        </tr>
                        <tr>
                            <th>Code</th>
                            <td>{{ entity.code }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
</div>

{% endblock %}

