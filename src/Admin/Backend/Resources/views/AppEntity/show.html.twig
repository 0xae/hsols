{% extends 'BackendBundle:Default:layout.html.twig' %}

{% block content %}

<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Departamento {{ entity.name }}</h3>
                <p>
                    <a href="{{ path('administration_entities') }}">
                        <span class="glyphicon glyphicon-back"></span> Voltar
                    </a>
                </p>
            </div>
            <!-- /.box-header -->

            <div class="box-body no-padding">
                <table class="table table-hover table-striped">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ entity.id }}</td>
                        </tr>
                        <tr>
                            <th>Nome</th>
                            <td>{{ entity.name }}</td>
                        </tr>
                        <tr>
                            <th>Data de cria&ccedil;&atilde;o</th>
                            <td>{{ entity.createdAt|date('Y-m-d H:i:s') }}</td>
                        </tr>
                        <tr>
                            <th><span class="fa fa-user"></span> Criado por</th>
                            <td>
                                {% if entity.createdBy %}
                                    {{ entity.createdBy.name }}/{{ entity.createdBy.entity.name }}
                                {% endif %}                                
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
</div>

{% endblock %}

