{{ form_start(form) }}
{% form_theme form 'bootstrap_3_layout.html.twig' %}
    <div class="row">
        <div class="col-md-6">
            <div style="color: gray;margin-bottom: 20px;">
                <span class="fa fa-user"></span>
                Dados do utente
            </div>

            <div class="form-group">
                <label>Nome</label>
                {{ form_widget(form.name, {
                    'attr' : {
                        'disabled' : entity.disabled
                    }
                }) }}
            </div>

            <div class="form-group">
                <label>Morada</label>
                {{ form_widget(form.address, {
                    'attr' : {
                        'disabled' : entity.disabled
                    }
                }) }}
            </div>

            <div class="form-group">
                <label>Telefone</label>
                {{ form_widget(form.phone, {
                    'attr' : {
                        'disabled' : entity.disabled
                    }
                }) }}
            </div>

            <div class="form-group">
                <label>Email</label>
                {{ form_widget(form.email, {
                    'attr' : {
                        'disabled' : entity.disabled
                    }
                }) }}
            </div>

        </div>

        <div class="col-md-6">
            <div style="color: gray;margin-bottom: 20px;">
                <span class="fa fa-archive"></span>
                Reclamacao/Sugestao
            </div>

            <div class="form-group">
                <label>Departamento</label>
                {{ form_widget(form.entity, {
                    'attr' : {
                        'disabled' : entity.disabled
                    }
                }) }}
            </div>

            <div class="form-group">
                <label>Tipo</label>
                {{ form_widget(form.type, {
                    'attr' : {
                        'disabled' : entity.disabled
                    }
                }) }}
            </div>

            <div class="form-group">
                <label>Data</label>
                <br/>
                {% if entity.disabled %}
                    <div class="hidden">
                    {{ form_widget(form.date) }}
                    </div>
                    <input disabled="" class="form-control" value="{{entity.date|date('Y-m-d')}}" />
                {% else %}
                    {{ form_widget(form.date) }}
                {% endif %}
            </div>

            <div class="form-group">
                <label>Descri&ccedil;&atilde;o sum&aacute;ria dos fatos</label>
                {{ form_widget(form.description, {
                    'attr' : {
                        'disabled' : entity.disabled
                    }
                }) }}
            </div>
        </div>

        <div class="col-md-12">
            {{ form_widget(form.submit, {
                    'attr' : {
                        'disabled' : entity.disabled
                    }
                }) }}
            {{ form(form) }}
        </div>
    </div>
{{ form_end(form) }}

