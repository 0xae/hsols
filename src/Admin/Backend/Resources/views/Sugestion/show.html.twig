{% extends 'BackendBundle:Default:layout.html.twig' %}

{% block content %}

<div class="row" ng-controller="SugestionViewController">
    <div class="col-xs-12" ng-init="obj = {code: '{{entity.objCode}}', id: {{entity.id}}, type:{{entity.type}}}">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title" style="font-weight:bold">
                    {% if entity.type == 'reclamacao' %}
                        Reclamação Externa
                    {% else %}
                        Sugestão
                    {% endif %}
                    <a href="#">#{{ entity.objCode }}</a>
                </h3>
                <p style="font-size:12px;color:gray">
                    <span class="fa fa-user"></span>
                    Criada por {{entity.createdBy.name}}/{{entity.createdBy.entity.name}}
                </p>
                <p>
                    <a href="{{ path('administration_Sugestion') }}">                        
                        <span class="fa fa-back"></span> Voltar
                    </a>
                </p>
            </div>
            <!-- /.box-header -->

            <div class="box-body no-padding">
                <table class="table table-hover table-striped">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ entity.id }}</td>
                        </tr>
                        <tr>
                            <th>Type</th>
                            <td>{{ entity.type }}</td>
                        </tr>
                        <tr>
                            <th>Name</th>
                            <td>{{ entity.name }}</td>
                        </tr>
                        <tr>
                            <th>Address</th>
                            <td>{{ entity.address }}</td>
                        </tr>
                        <tr>
                            <th>Phone</th>
                            <td>{{ entity.phone }}</td>
                        </tr>
                        <tr>
                            <th>Email</th>
                            <td>{{ entity.email }}</td>
                        </tr>
                        <tr>
                            <th>Description</th>
                            <td>{{ entity.description }}</td>
                        </tr>
                        <tr>
                            <th>Createdat</th>
                            <td>{{ entity.createdAt|date('Y-m-d H:i:s') }}</td>
                        </tr>
                        <tr>
                            <th>Createdby</th>
                            <td>{{ entity.createdBy }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
</div>

{% endblock %}

