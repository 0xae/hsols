{% extends 'BackendBundle:Default:layout.html.twig' %}

{% block content %}

<div class="row" ng-controller="ComplaintViewController">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title" style="font-weight:bold">
                    {% if entity.type == 'queixa' %}
                        Queixa
                    {% else %}
                        Den&uacute;ncia
                    {% endif %}

                    <a href="#">
                    #{{ entity.objCode }}
                    </a>
                </h3>
                <p style="font-size:12px;color:gray">
                    <span class="fa fa-user"></span>
                    Criada por {{entity.createdBy.name}}/{{entity.createdBy.entity.name}}
                </p>
                <p>
                    <a href="{{ path('administration_Complaint') }}">                        
                        <span class="fa fa-back"></span> Voltar
                    </a>
                </p>
            </div>
            <!-- /.box-header -->

            <div class="box-body no-padding">
                <table class="table table-hover table-striped">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ entity.id }}</td>
                        </tr>
                        <tr>
                            <th>Name</th>
                            <td>{{ entity.name }}</td>
                        </tr>
                        <tr>
                            <th>Address</th>
                            <td>{{ entity.address }}</td>
                        </tr>
                        <tr>
                            <th>Locality</th>
                            <td>{{ entity.locality }}</td>
                        </tr>
                        <tr>
                            <th>Phone</th>
                            <td>{{ entity.phone }}</td>
                        </tr>
                        <tr>
                            <th>Email</th>
                            <td>{{ entity.email }}</td>
                        </tr>
                        <tr>
                            <th>Type</th>
                            <td>{{ entity.type }}</td>
                        </tr>
                        <tr>
                            <th>Opname</th>
                            <td>{{ entity.opName }}</td>
                        </tr>
                        <tr>
                            <th>Opaddress</th>
                            <td>{{ entity.opAddress }}</td>
                        </tr>
                        <tr>
                            <th>Oplocality</th>
                            <td>{{ entity.opLocality }}</td>
                        </tr>
                        <tr>
                            <th>Opphone</th>
                            <td>{{ entity.opPhone }}</td>
                        </tr>
                        <tr>
                            <th>Opemail</th>
                            <td>{{ entity.opEmail }}</td>
                        </tr>
                        <tr>
                            <th>Factdate</th>
                            <td>{{ entity.factDate|date('Y-m-d H:i:s') }}</td>
                        </tr>
                        <tr>
                            <th>Anexo</th>
                            <td>
                                {% if entity.factAnnex %}
                                    <a href="{{ asset('uploads/complaints/' ~ entity.factAnnex) }}">
                                        Ver anexo
                                    </a>
                                {% endif %}
                            </td>
                        </tr>
                        <tr>
                            <th>Factdetail</th>
                            <td>{{ entity.factDetail }}</td>
                        </tr>
                        <tr>
                            <th>Hasproduct</th>
                            <td>{{ entity.hasProduct }}</td>
                        </tr>
                        {# <tr>
                            <th>Annex</th>
                            <td>{{ entity.annex }}</td>
                        </tr> #}
                        {# <tr>
                            <th>Annextype</th>
                            <td>{{ entity.annexType }}</td>
                        </tr> #}
                        <tr>
                            <th>Createdat</th>
                            <td>{{ entity.createdAt|date('Y-m-d H:i:s') }}</td>
                        </tr>
                        <tr>
                            <th>Createdby</th>
                            <td>{{ entity.createdBy }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
</div>

{% endblock %}

