{% extends 'BackendBundle:Default:layout.html.twig' %}

{% block content %}

<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Local #{{ entity.id }}</h3>
                <p>
                    <a href="{{ path('administration_Location') }}">
                        <span class="glyphicon glyphicon-back"></span>Voltar
                    </a>
                </p>
            </div>
            <!-- /.box-header -->

            <div class="box-body no-padding">
                <table class="table table-hover table-striped">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ entity.id }}</td>
                        </tr>
                        <tr>
                            <th>Ilha</th>
                            <td>{{ entity.ilha }}</td>
                        </tr>
                        <tr>
                            <th>Concelho</th>
                            <td>{{ entity.concelho }}</td>
                        </tr>
                        <tr>
                            <th>Localidade</th>
                            <td>{{ entity.localidade }}</td>
                        </tr>
                        <tr>
                            <th>Data</th>
                            <td>{{ entity.createdAt|date('Y-m-d H:i:s') }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
</div>

{% endblock %}

