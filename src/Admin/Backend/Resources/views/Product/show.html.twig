{% extends 'BackendBundle:Default:layout.html.twig' %}

{% block content %}

<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Product #{{ entity.id }}</h3>
                <p>
                    <a href="{{ path('administration_Product') }}">
                        <span class="glyphicon glyphicon-back"></span> Voltar
                    </a>
                </p>
            </div>
            <!-- /.box-header -->

            <div class="box-body no-padding">
                <table class="table table-hover table-striped">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ entity.id }}</td>
                        </tr>
                        <tr>
                            <th>Name</th>
                            <td>{{ entity.name }}</td>
                        </tr>
                        <tr>
                            <th>Description</th>
                            <td>{{ entity.description }}</td>
                        </tr>
                        <tr>
                            <th>Picture</th>
                            <td>{{ entity.picture }}</td>
                        </tr>
                        <tr>
                            <th>Price</th>
                            <td>{{ entity.price }}</td>
                        </tr>
                        <tr>
                            <th>Instock</th>
                            <td>{{ entity.inStock }}</td>
                        </tr>
                        <tr>
                            <th>Obs</th>
                            <td>{{ entity.obs }}</td>
                        </tr>
                        <tr>
                            <th>Createdat</th>
                            <td>{{ entity.createdAt|date('Y-m-d H:i:s') }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
</div>

{% endblock %}

