<table class="table table-hover table-striped datatable">
    <thead>
        <tr>                                        
            <th>CÃ³digo #</th>
            <th>Nome</th>
            <th>Perfil</th>
            <th>Departamento</th>
            <th>Criado em</th>
            <th>Criado por</th>                                
            <th></th>
        </tr>
    </thead>
    <tbody>
        {% for entity in entities %}
            <tr>
                <td>
                    <a href="{{ path('administration_user_edit', { 'id': entity.id }) }}">
                    #{{ entity.id }}
                    </a>
                </td>                                                                 
                <td>{{ entity.name }}</td>
                <td>
                    {% if entity.profile %}
                        {{ entity.profile.name }}
                    {% endif %}
                </td>
                <td>
                    {% if entity.entity %}
                        {{ entity.entity.name }}
                    {% endif %}
                </td>
                <td>
                    {% if entity.createdAt %}
                        {{ entity.createdAt|date('Y-m-d H:i:s') }}
                    {% endif %}
                </td>
                <td>
                    {% if entity.createdBy %}
                        {{ entity.createdBy.name }}/{{ entity.createdBy.entity.name }}
                    {% endif %}
                </td>
                <td>
                    <a href="{{ path('administration_user_edit', { 'id': entity.id }) }}">
                        <span class="text-warning fa fa-edit"></span>
                        {# <span class="badge badge-primary">EDITAR</span> #}
                    </a>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>

