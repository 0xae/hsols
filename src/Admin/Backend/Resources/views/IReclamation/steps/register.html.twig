<div class="row">
    <div class="col-md-12">
        <h3>Reclamação Interna</h3>
        <div style="color: gray;margin-bottom: 20px;">
            <span class="fa fa-user"></span>
            Dados do utente
            <hr/>
        </div>
    </div>

    <div class="col-md-12">
        <div class="form-group">
            <label>Data</label>
            <br/>
            {% if entity.state != 'edit' %}
                <div class="hidden">
                {{ form_widget(form.factDate) }}
                </div>
                <input class="form-control" disabled="" class="form-control" value="{{entity.factDate|date('Y-m-d')}}" />
            {% else %}
                {{ form_widget(form.factDate) }}
            {% endif %}
        </div>
    </div>

    <div class="col-md-6">
        <div class="form-group">
            <label>Nome</label>
            {% if entity.state != 'edit' %}
                <div class="hidden">
                {{ form_widget(form.name) }}
                </div>
                <input class="form-control" disabled="" value="{{entity.name}}" />
            {% else %}
                {{ form_widget(form.name) }}
            {% endif %}
        </div>

        <div class="form-group">
            <label>Direcção</label>
            {% if entity.state != 'edit' %}
                <div class="hidden">
                {{ form_widget(form.direction) }}
                </div>
                <input class="form-control" disabled="" value="{{entity.direction}}" />
            {% else %}
                {{ form_widget(form.direction) }}
            {% endif %}
        </div>
    </div>

    <div class="col-md-6" ng-init="defChoice = 'c1'">
        <div class="form-group">
            <label>Tipo</label>

            {% if entity.state != 'edit' %}
                <div class="hidden">
                {{ form_widget(form.type) }}
                </div>
                <input class="form-control" value="{{entity.typeLabel}}" disabled="" />
            {% else %}
                {{ form_widget(form.type, {'attr' : {
                    'ng-model' : 'defChoice'
                } }) }}
            {% endif %}
            <div style="padding: 10px;" ng-if="defChoice == 'c9'">
                <span style="color:gray;">
                    <strong>Descreva</strong>
                </span>
                {{ form_widget(form.typeData) }}
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div style="color: gray;margin-bottom: 20px;">
            <span class="fa fa-archive"></span>
            Descrição sum&aacute;ria dos fatos
        </div>
    </div>

    <div class="col-md-6">
        <div class="form-group">
            <label>Descri&ccedil;&atilde;o</label>
            {% if entity.state != 'edit' %}
                <div class="hidden">
                {{ form_widget(form.factDetail) }}
                </div>
                <textarea class="form-control" rows="4" disabled="">{{entity.factDetail}}</textarea>
            {% else %}
                {{ form_widget(form.factDetail) }}
            {% endif %}
        </div>
    </div>
</div>
