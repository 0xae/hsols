{% extends 'BackendBundle:Default:layout.html.twig' %}

{% block content %}

<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Pedido #{{ entity.code }}</h3>
                <p class="pull-right">
                    <span class="label label-primary">{{entity.status|upper}}</span>
                    <br/>
                    <a style="margin-top:8px;" href="{{path('administration_Order_billing', {'id':entity.id})}}" class="btn btn-sm btn-success">FACTURA</a>
                </p>
                <p style="font-size:12px;color:gray">
                    <span class="fa fa-user"></span>
                    Criada por {{entity.createdBy.name}}
                    <br/> <span class="fa fa-calendar"></span> em {{entity.createdAt|date('Y-m-d H:i')}}
                </p>
                <p>
                    <a href="{{ path('administration_Order') }}">
                        <span class="glyphicon glyphicon-back"></span>Voltar
                    </a>
                </p>
            </div>
            <!-- /.box-header -->

            <div class="box-body no-padding">
                <table class="table table-hover table-striped">
                    <tbody>
                        <tr>
                            <th>PEDIDO</th>
                            <td>#{{ entity.code }}</td>
                        </tr>
                        <tr>
                            <th>Produto</th>
                            <td>{{ entity.product.name }}</td>
                        </tr>
                        <tr>
                            <th>Quantidade</th>
                            <td>{{ entity.quantity }}</td>
                        </tr>
                        <tr>
                            <th>Cliente</th>
                            <td>{{ entity.customer.name }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
</div>

{% endblock %}

