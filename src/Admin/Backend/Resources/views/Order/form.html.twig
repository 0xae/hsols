{{ form_start(form) }}
{% form_theme form 'bootstrap_3_layout.html.twig' %}
    <div class="row">

        <div class="col-md-12">
            <div class="form-group">
                <label>Produto</label>
                {{ form_widget(form.product) }}
            </div>
            
            <div class="form-group {% if not is_granted('ROLE_ADMIN') %} hidden {% endif %}">
                <label>Cliente</label>
                {{ form_widget(form.customer) }}
            </div>

            <div class="form-group">
                <label>Quantidade</label>
                {{ form_widget(form.quantity) }}
            </div>  

            <div class="form-group">
                <label>Observa&ccedil;&atilde;o</label>
                {{ form_widget(form.obs) }}
            </div>

            <div class="hidden">
                {{ form_widget(form.status) }}
                {{ form_widget(form.createdAt) }}
                {{ form_widget(form.createdBy) }}
            </div>

            {{ form(form) }}
        </div>

    </div>    
{{ form_end(form) }}

