{% extends 'BackendBundle:Default:layout.html.twig' %}

{% block content -%}

    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Pedidosr</h3>

                    <div class="box-tools">
                        <a class="btn btn-primary" 
                        href="{{ path('administration_Order_new') }}">
                            <span class="glyphicon glyphicon-plus"></span>
                            Criar Pedido
                        </a>
                    </div>
                </div>
                <!-- /.box-header -->

                <div class="box-body table-responsive no-padding">
                    <table class="table table-hover table-striped">
                        <thead>
                            <tr>                                  
                                <th>ID#</th>
                                <th>Quantity</th>
                                <th>Obs</th>
                                <th>Status</th>
                                <th>Createdat</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for entity in entities %}
                                <tr>                                                                                    <td>
                                                <a href="{{ path('administration_Order_edit', { 'id': entity.id }) }}">
                                                #{{ entity.id }}
                                                </a>
                                            </td>                                                                                    <td>{{ entity.quantity }}</td>                                                                                    <td>{{ entity.obs }}</td>                                                                                    <td>{{ entity.status }}</td>                                                                                    <td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>                                            <td><a href="{{ path('administration_Order_edit', { 'id': entity.id }) }}">
<span class="badge badge-primary">
        EDITAR
</span>
</a>
                                            </td>                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>

                    {% if entities %}
                        {{ pagerfanta(paginate, 'twitter_bootstrap3', {
                            'next_message': 'Proximo',
                            'prev_message': 'Anterior'
                            }) }}
                    {% endif %}
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
    </div>

{% endblock %}
