{% extends 'BackendBundle:Default:layout.html.twig' %}

{% block content -%}

    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Pedidos</h3>

                    <div class="box-tools">
                        <a class="btn btn-primary" 
                        href="{{ path('administration_Order_new') }}">
                            Criar Pedido
                        </a>
                    </div>
                </div>
                <!-- /.box-header -->

                <div class="box-body table-responsive no-padding">
                    <table class="table table-hover table-striped">
                        <thead>
                            <tr>                                  
                                <th>ID#</th>
                                <th>Cliente</th>
                                <th>Produto</th>
                                <th>Quantidade</th>
                                <th>Total</th>
                                <th>Data</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for entity in entities %}
                                <tr>        
                                    <td>
                                        <a href="{{ path('administration_Order_edit', { 'id': entity.id }) }}">
                                        #{{ entity.id }}
                                        </a>
                                    </td> 
                                    <td>{{ entity.customer.name }}</td>                                     
                                    <td>{{ entity.product.name }}</td>                                     
                                    <td>{{ entity.quantity }}</td>                                     
                                    <td>{{ entity.totalFmt }}</td>                                          
                                    <td>{{ entity.createdAt|date('Y-m-d H:i:s') }}</td>                                            
                                    <td>
                                        <a href="{{ path('administration_Order_show', { 'id': entity.id }) }}">
                                            <span class="badge badge-primary">
                                            VER PEDIDO
                                            </span>
                                        </a>
                                    </td>
                               </tr>
                            {% endfor %}
                        </tbody>
                    </table>

                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->

            {{ pagerfanta(paginate, 'twitter_bootstrap3', {
                'next_message': 'Proximo',
                'prev_message': 'Anterior'
            }) }}
        </div>
    </div>

{% endblock %}
