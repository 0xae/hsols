{% extends 'BackendBundle:Default:layout.html.twig' %}

{% block content %}

<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <span class="pull-right">
                    {% image '@BackendBundle/Resources/public/img/hsolutions.png' %}
                        <img src="{{ asset_url }}"
                             class="user-image"
                             alt="User Image!"
                             width="100"
                        />
                    {% endimage %}
                </span>

                <h2 style="margin-top: 5px;">Fatura #{{ entity.code }}</h2>

                <p style="font-size:14px;color:gray">
                    Emitida por {{app.user.name}}
                    <br/> 
                    {{entity.createdAt|date('Y-m-d H:i')}}
                </p>
            </div>
            <!-- /.box-header -->

            <div class="box-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                <strong>DE:</strong>
                                <br/>
                                <span class="fa fa-building"></span> Hotel Solutions<br/>
                                <span class="fa fa-at"></span> comercial@hotelsolutions.cv<br/>
                                <span class="fa fa-phone"></span> (+238)920 38 10 / (+238)971 63 30<br/>
                            </td>

                            <td>
                                <strong>PARA:</strong>
                                <br/>
                                <span class="fa fa-building"></span> {{entity.customer.name|capitalize}}<br/>
                                <span class="fa fa-at"></span> {{entity.customer.email}}<br/>
                                <span class="fa fa-phone"></span> {{entity.customer.phone}}<br/>
                            </td>
                        </tr>
                    </tbody>
                </table>

                <table class="table table-hover table-striped">
                    <thead>
                        <tr>
                            <td>PRODUTO #</td>
                            <td>PRE&Ccedil;O</td>
                            <td>QUANTIDADE</td>
                            <td>DESCONTO</td>
                            <td>TOTAL</td>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <th>#{{ entity.product.code }} <br/> {{ entity.product.name }}</th>
                            <td>{{ entity.product.price }}$00</td>
                            <td>{{ entity.quantity }}</td>
                            <td>0%</td>
                            <td>{{ entity.totalFmt }}</td>
                        </tr>
<!--                         <tr>
                            <td></td>
                            <td></td>
                            <td><strong>DESCONTO TOTAL</strong></td>
                            <td>0%</td>
                            <td>--</td>
                        </tr>
 -->                        <tr>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td><strong>SUBTOTAL</strong></td>
                            <td>{{entity.totalFmt}}</td>
                        </tr>
                        <tr>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td><strong>IVA</strong></td>
                            <td>15%</td>
                        </tr>
                        <tr>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td><strong>TOTAL</strong></td>
                            <td>{{entity.totalFmt}}</td>
                        </tr>
                    </tbody>
                </table>

                <a href="#" class="btn btn-danger app-print-page hidden-print"
                    title="Imprimir em pdf">
                    <span class="fa-file-pdf-o"></span>
                    <strong>PDF</strong>
                </a>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
</div>

{% endblock %}

