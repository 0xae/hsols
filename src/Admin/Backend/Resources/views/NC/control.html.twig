{% extends 'BackendBundle:Default:layout.html.twig' %}

{% block content -%}
<style>
ul.pagination {
    margin-top:0px;
}
</style>

<div class="row" ng-controller="SugestionController">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Listagem de Não Conformidades</h3>
